<style>
    body {
        font-family: Arial !important;
    }

    .auth form .form-group {
        margin-bottom: 10px !important;
    }

    .text-fw600 {
        /*font-weight:600;*/
        font-size: 16px !important;
    }
    tr td{
        white-space:normal !important;
        line-height:1.5 !important;
    }

    .table-striped{
        background-color: #f2f2f2;
    }
</style>

<div class="row flex-grow" style="margin: 5px">

    <div class="col-lg-12 " style="padding-top:0px; ">
        <div class="card">
            <div class="card-body" style="padding-top:10px">
                <h1 class="card-title" style="text-align:center; font-size:30px"> DANH SÁCH XE GỬI</h1>
                @if (ViewBag.listRecords.Count > 0)
                {
                    <table class="table table-bordered">
                        <colgroup class="table">
                            <col style="width: 3%;">
                            <col style="width: 8%;">
                            <col style="width: 8%;">
                            <col style="width: 10%;">
                            <col style="width: 10%;">
                            <col style="width: 10%;">
                            <col style="width: 8%;">
                            <col style="width: 8%;">
                            <col style="width: 15%;">
                            <col style="width: 30%;">

                        </colgroup>
                        <thead>
                            <tr>
                                <th> STT </th>
                                <th> Mã vé </th>
                                <th> Bãi xe </th>
                                <th> Loại vé </th>
                                <th> Loại xe </th>
                                <th> Tên xe </th>
                                <th> Màu sắc </th>
                                <th> Biển số </th>
                                <th> Ngày vào </th>
                                <th> Hình ảnh </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                            }
                            @foreach (var item in ViewBag.listRecords)
                            {
                                var str = "";
                                if (item.LoaiVe.Id == 1 || item.LoaiVe.Id == 2 || item.LoaiVe.Id == 3)
                                {
                                    str = "table-striped";
                                }
                                <tr class=" @str">
                                    <td>@i</td>
                                    <td>@item.VeXe.MaVe</td>
                                    <td>@item.BaiXe.TenBaiXe</td>
                                    <td>@item.LoaiVe.TenLoaiVe</td>
                                    <td>@item.LoaiXe.TenLoaiXe</td>
                                    <td>@item.Xe.DongXe @item.Xe.TenXe </td>
                                    <td>@item.Xe.MauSac</td>
                                    <td> @item.Xe.BienSo</td>
                                    <td>@String.Format("{0:dd/MM/yyyy HH:mm:ss}", item.VeXe.NgayVao)</td>
                                    <td> <img style="width:100%; height:200px" src="~/Upload/Xe/@item.VeXe.HinhAnh" /></td>
                                </tr>
                                i++;

                            }

                        </tbody>
                    </table>
                }
              

            </div>
        </div>
    </div>
</div>
