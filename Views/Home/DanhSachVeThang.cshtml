<style>
    body {
        font-family: Arial !important;
    }

    .auth form .form-group {
        margin-bottom: 10px !important;
    }

    .text-fw600 {
        /*font-weight:600;*/
        font-size: 16px !important;
    }
</style>

<div class="row flex-grow">

    <div class="col-lg-12 " style="padding-top:0px; margin-top: 0px">
        <div class="card">
            <div class="card-body" style="padding-top:10px">
                <h1 class="card-title" style="text-align:center; font-size:30px"> DANH SÁCH VÉ THÁNG</h1>
                <table class="table table-striped">
                    <colgroup class="table table-bordered">
                        <col style="width: 3%;">
                        <col style="width: 10%;">
                        <col style="width: 15%;">
                        <col style="width: 12%;">
                        <col style="width: 10%;">
                        <col style="width: 10%;">
                        <col style="width: 10%;">
                        <col style="width: 15%;">
                        <col style="width: 15%;">

                    </colgroup>
                    <thead>
                        <tr>
                            <th> STT </th>
                            <th> Mã vé </th>
                            <th> Họ Tên </th>
                            <th> Số điện thoại </th>
                            <th> Loại xe </th>
                            <th> Tên xe </th>
                            <th> Biển số </th>
                            <th> Ngày đăng ký </th>
                            <th> Ngày hết hạn </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in ViewBag.listRecords)
                        {
                            <tr>
                              <td>@i</td>
                              <td>@item.VeXe.MaVe</td>
                               <td>@item.User.TenDayDu</td>
                               <td>@item.User.SoDienThoai</td>
                                <td>@item.LoaiXe.TenLoaiXe</td>
                                <td>@item.Xe.DongXe @item.Xe.TenXe @item.Xe.MauSac</td>
                                <td> @item.Xe.BienSo</td>
                                <td>@String.Format("{0:dd/MM/yyyy HH:mm:ss}", item.VeXe.NgayDangKy)</td>
                                <td>@String.Format("{0:dd/MM/yyyy HH:mm:ss}", item.VeXe.NgayHetHan)</td>
                            </tr>
                            i++;

                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
